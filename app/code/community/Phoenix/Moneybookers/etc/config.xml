<config>
    <modules>
        <Phoenix_Moneybookers>
            <version>1.2</version>
        </Phoenix_Moneybookers>
    </modules>
    <global>
        <models>
            <moneybookers>
                <class>Phoenix_Moneybookers_Model</class>
            </moneybookers>
        </models>
        <helpers>
            <moneybookers>
                <class>Phoenix_Moneybookers_Helper</class>
            </moneybookers>
        </helpers>
        <resources>
            <moneybookers_setup>
                <setup>
                    <module>Phoenix_Moneybookers</module>
                </setup>
            </moneybookers_setup>
        </resources>
        <blocks>
            <moneybookers><class>Phoenix_Moneybookers_Block</class></moneybookers>
        </blocks>
        <template>
            <email>
               <moneybookers_activateemail>
                   <label>Moneybookers activate email</label>
                   <file>moneybookers_activateemail.html</file>
                   <type>html</type>
               </moneybookers_activateemail>
            </email>
        </template>
        <payment>
            <groups>
                <mbookers>Moneybookers</mbookers>
            </groups>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <moneybookers_processing>/moneybookers/processing</moneybookers_processing>
        </secure_url>
        <routers>
            <moneybookers>
                <use>standard</use>
                <args>
                    <module>Phoenix_Moneybookers</module>
                    <frontName>moneybookers</frontName>
                </args>
            </moneybookers>
        </routers>
        <translate>
            <modules>
                <Phoenix_Moneybookers>
                    <files>
                        <default>Phoenix_Moneybookers.csv</default>
                    </files>
                </Phoenix_Moneybookers>
            </modules>
        </translate>
        <layout>
            <updates>
                <moneybookers>
                    <file>moneybookers.xml</file>
                </moneybookers>
            </updates>
        </layout>
    </frontend>
    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <moneybookers after="Mage_Adminhtml">Phoenix_Moneybookers</moneybookers>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Phoenix_Moneybookers>
                    <files>
                        <default>Phoenix_Moneybookers.csv</default>
                    </files>
                </Phoenix_Moneybookers>
            </modules>
        </translate>
        <layout>
            <updates>
                <moneybookers>
                    <file>moneybookers.xml</file>
                </moneybookers>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <moneybookers translate="title" module="moneybookers">
                                            <title>Moneybookers Settings</title>
                                        </moneybookers>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <phoenix>
