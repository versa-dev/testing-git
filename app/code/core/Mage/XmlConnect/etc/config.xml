                    </native>
                    <submit>
                        <icon> <width>512</width> <height>512</height> </icon>
                        <loader_image> <width>320</width> <height>460</height> </loader_image>
                        <logo> <width>57</width> <height>57</height> </logo>
                        <big_logo> <width>100</width> <height>100</height> </big_logo>
                    </submit>
                </interface>
            </default>
